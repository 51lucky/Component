<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TestRouterAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openUriTest"
            android:textAllCaps="false"
            android:text="直接打开 EHi://component3/main?data=openUriTest \n uri 可以是后台下发的,可以是动态的" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpToAar3"
            android:textAllCaps="false"
            android:text="跳转到依赖的aar的业务组件3中" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="normalJump"
            android:text="普通跳转" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="normalJumpTwice"
            android:text="连续普通跳转两次,防止打开两次界面测试" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="jumpGetData"
            android:textAllCaps="false"
            android:text="跳转拿数据(使用onActivityResult)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:onClick="rxJumpGetData"
            android:text="跳转拿数据(不使用onActivityResult)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="rxJumpGetDataStartWithTask"
            android:textAllCaps="false"
            android:text="耗时操作后跳转拿数据(不使用onActivityResult)" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clearInfo"
            android:text="清空信息" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="这里会显示所有的结果"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:textColor="#FF0000"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>